{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "outDir": "./bundles",
        "noImplicitAny": true,
        "sourceMap": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowUnusedLabels": false,
        "noImplicitReturns": true,
        "suppressImplicitAnyIndexErrors": true,
        "declaration": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "baseUrl": "types",
        "types": ["hammerjs", "jasmine", "node"],
        "typeRoots": ["types"],
        "lib": ["es2015", "dom"]
    },
    "include": [
        "index.ts",
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "demo"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true,
        "debug": true
    },
    "awesomeTypeScriptLoaderOptions": {
        "useWebpackText": true
    }
}
